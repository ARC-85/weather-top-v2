{{> menu}}

<form class="ui stacked segment form" action="/readings/{{station.id}}/updatereading/{{reading.id}}" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="0" type="number" name="code" value="{{reading.code}}">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="0" type="number" name="temperature" value="{{reading.temperature}}">
    </div>
    <div class="field">
      <label>Wind</label>
      <input placeholder="0" type="number" name="wind" value="{{reading.wind}}">
    </div>
  </div>
  <button class="ui blue submit button">Update Reading</button>
</form>
